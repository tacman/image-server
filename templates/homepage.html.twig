{% extends "base.html.twig" %}

{% block body %}
    <h1>Survos Image Resizing Server</h1>

    <div>
        This server manages the resizing for all images, including museado.org

    </div>

    {% set url = 'https://sammlung.belvedere.at/internal/media/downloaddispatcher/130189?download=' %}
    {% set url = 'https://art.thewalters.org/images/art/PS1_54.975_Fnt_DD_T08.jpg' %}
    {% set webhook = url('app_webhook') %}
    <a href="{{ webhook }}" target="_blank">{{ webhook }}</a>


    <a href="{{ path('app_dispatch_process', {
        urls: [url],
        callbackUrl: webhook
    }) }}"
       target="_blank"
    >
        <button>Raw Dispatch</button>
    </a>

    <a href="{{ path('app_test_dispatch') }}">
        Dispatch dummy requests
    </a>

    <a href="{{ path('app_request_filter', {
        filter: 'small',
        url: url
    }) }}"
       target="_blank"
    >
        Request resize
    </a>
{% endblock %}
